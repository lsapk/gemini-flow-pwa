      "url": "/focus",
      "icons": [
        {
          "src": "icons/focus-shortcut.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "rendering": {
    "browser": [
      "chromium",
      "gecko",
      "webkit"
    ]
  },
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "dir": "auto",
  "lang": "fr",
  "display_override": [
    "standalone",
    "window-controls-overlay",
    "minimal-ui"
  ],
  "file_handlers": [
    {
      "action": "/open-task",
      "accept": {
        "text/plain": [
          ".txt"
        ],
        "application/json": [
          ".json"
        ]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+deepflow",
      "url": "/protocol?url=%s"
    }
  ],
  "capture_links": "new-client"
}
