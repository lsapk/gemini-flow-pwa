  "shortcuts": [
    {
      "name": "Tâches",
      "short_name": "Tâches",
      "description": "Ajouter une nouvelle tâche",
      "url": "/tasks",
      "icons": [
        {
          "src": "icons/tasks-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Habitudes",
      "short_name": "Habitudes",
      "description": "Voir vos habitudes",
      "url": "/habits",
      "icons": [
        {
          "src": "icons/habits-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Focus",
      "short_name": "Focus",
